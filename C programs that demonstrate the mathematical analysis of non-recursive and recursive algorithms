#include <stdio.h>
int factorial_non_recursive(int n) {
    int result = 1;
    for (int i = 1; i <= n; i++) {
        result *= i;
    }
    return result;
}
int main() {
    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    int result = factorial_non_recursive(number);
    printf("Factorial of %d is %d\n", number, result);    
    return 0;
}
